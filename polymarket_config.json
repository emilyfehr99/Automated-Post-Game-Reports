{
  "polymarket_ai_config": {
    "api_settings": {
      "base_url": "https://gamma-api.polymarket.com",
      "rate_limit_delay": 1.0,
      "max_retries": 3,
      "timeout": 30
    },
    
    "trading_parameters": {
      "max_position_size": 0.1,
      "stop_loss_threshold": 0.2,
      "take_profit_threshold": 0.5,
      "min_confidence_threshold": 0.3,
      "min_liquidity_threshold": 1000
    },
    
    "currency_settings": {
      "base_currency": "CAD",
      "target_currency": "USD",
      "exchange_rate_source": "yahoo_finance",
      "update_frequency_minutes": 15
    },
    
    "model_settings": {
      "models_to_train": [
        "random_forest",
        "gradient_boosting", 
        "logistic_regression",
        "xgboost"
      ],
      "cross_validation_folds": 5,
      "min_training_samples": 50,
      "feature_importance_threshold": 0.01
    },
    
    "risk_management": {
      "max_portfolio_risk": 0.2,
      "correlation_threshold": 0.7,
      "diversification_target": 5,
      "rebalance_frequency_hours": 24
    },
    
    "data_collection": {
      "historical_days": 30,
      "update_frequency_minutes": 5,
      "max_events_per_request": 50,
      "cache_duration_minutes": 10
    },
    
    "compliance": {
      "jurisdiction": "Canada",
      "restricted_provinces": ["Ontario"],
      "legal_warning_enabled": true,
      "tax_reporting_enabled": true
    },
    
    "logging": {
      "log_level": "INFO",
      "log_file": "polymarket_ai.log",
      "max_log_size_mb": 10,
      "backup_count": 5
    }
  }
}
